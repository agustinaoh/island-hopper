<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url( '<%= cl_image_path 'cris-tagupa-9ZXHUr5aCwM-unsplash_tuxfon'%>' );">
  <div class="container text-center">
    <h1>The island experience, made easy.</h1>
  </div>
</div>

<div class="container text-center mt-5 pb-3 border-bottom">
  <div class="searchbar">
    <form action="">
      <input type="text" placeholder="Search...">
      <a class="btn btn-primary" href="#">Find your island</a>
    </form>
  </div>
</div>

<% if user_signed_in? %>
  <p>Hello, <%= current_user.first_name %></p>
<% end %>

<%= link_to new_user_session_path do %>
  <button class="btn btn-primary">Log in</button>
<% end %>

<%= link_to destroy_user_session_path, method: :delete do %>
  <button class="btn btn-primary">Log out</button>
<% end %>

<%= link_to new_user_registration_path do %>
  <button class="btn btn-primary">Sign up</button>
<% end %>
