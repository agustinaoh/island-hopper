<div class="container">

  <div class="text-center pt-5 pb-3">
    <h1>Welcome to <%= @island.name %></h1>

    <p>
      <i class="fas fa-globe-europe island-blue"></i>
      <%= @island.location %>  -  MAP / PHOTOS
    </p>
  </div>


  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner " style="max-height: 600px">
      <div class="carousel-item active">
        <img class="d-block w-100" style="object-position: 150% 50%;" src='<%= cl_image_path @island.photos.first.key %>' alt="First slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <div class="d-flex mt-3 ">
    <div class="island-details row bg-light">

      <!--  Island infos -->
      <div class="island-description col-6">
        <p><i class="fas fa-user-circle island-orange"></i> Listed by <%= @island.user.first_name  %></p>
        <p><i class="fas fa-user-friends island-orange"></i> <%= @island.capacity  %> people</p>
        <h3>Island description</h3>
        <p><%= @island.description %> </p>
        <h3>Features</h3>
        <p><%= @island.facilities %> </p>
      </div>

      <!--  BOOKING FORM -->
      <div class="col-6 p-3 bg-medium">
          <p class="mt-">
            Interested in <strong><%= @island.name %></strong> Island? Send a booking request to <strong><%= @island.user.first_name  %></strong>!
          </p>
          <div class="date-picker d-flex align-items-center">
            <div class="p-3 bg-light border">Start date</div>
            <div class="p-3 bg-light border">End date</div>
            <button class="btn btn-primary p-3">Request booking</button>
          </div>
      </div>

    </div>

  </div>

  <div class="text-center pt-5 pb-3">
    <h2 class="mt-3">Island suggestions</h2>
  </div>


  <div class="cards map-cards">

  <% @suggestions.each do |island| %>

  <a href="<%= island_path(island) %>">


    <div class="card-trip">
      <img src='<%= cl_image_path island.photos.first.key %>' alt="<%= island.name %>" />
      <div class="card-trip-infos">
        <div>

          <h2><%= island.name %></h2>

          <p><%= island.description %>!</p>
        </div>
        <h2 class="card-trip-pricing">â‚¬ <%= island.price_per_night %> / night</h2>
      </div>
    </div>
  </a>
  <% end %>
</div>


</div>

