<%= render 'shared/navbar' %>
<div class="container">

  <div class="text-center pt-5 pb-3">
    <h1>Welcome to <%= @island.name %></h1>

    <p>
      <i class="fas fa-globe-europe"></i>
      <%= @island.location %>  -  MAP / PHOTOS
    </p>
  </div>


  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner" style="max-height: 600px">
      <div class="carousel-item active">
        <img class="d-block w-100" src='<%= cl_image_path @island.photos.first.key %>' alt="First slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <div class="d-flex">
    <div class="island-details row">

      <div class="island-description col-6">
        <p><i class="fas fa-user-circle"></i> Listed by <%= @island.user.first_name  %></p>
        <p><i class="fas fa-user-friends"></i> <%= @island.capacity  %> people</p>
        <h3>Island description</h3>
        <p><%= @island.description %> </p>
        <h3>Features</h3>
        <p><%= @island.facilities %> </p>
      </div>

      <div class="island-booking col-6" style="background-color: lightblue">
        <p class="mt-3">Interested in <strong><%= @island.name %></strong> Island? Send a booking request to <strong><%= @island.user.first_name  %></strong>!</p>
        <button class="btn btn-primary">Request booking</button>

      </div>

    </div>

  </div>
  <h2>Reviews</h2>


</div>

