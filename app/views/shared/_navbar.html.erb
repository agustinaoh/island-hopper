

<nav class="navbar navbar-expand-lg sticky-top">

  <div class="container d-flex justify-content-between">

    <!-- LOGO PART -->
    <div class="logo-box">
      <%= link_to root_path do %>
      <%= image_tag "logo_nav.png", class: "d-inline-block align-top logo-img-nav" %>
      <span class="navbar-brand logo-text-nav">Island Hopper</span>
      <% end %>
    </div>

  <!-- MENU PART -->
    <div class="btn-group" id="navbar">

      <% if (user_signed_in?) %>
      <!-- LOGUED -->

        <div>
          <button type="button" class="btn dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="text-light pr-3"><%= current_user.first_name %></span>
            <%= cl_image_tag current_user.avatar.key, class: "nav-avatar" %>
          </button>

          <div class="dropdown-menu p-3">
            <%= link_to 'Dashboard', dashboard_path, class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <div class="d-flex">
              <%= link_to 'Log Out',destroy_user_session_path, method: :delete, class: "dropdown-item"  %>
            </div>
          </div>
        </div>

      <% else %>
      <!-- NOT LOGUED -->

        <div class="d-flex">
          <%= link_to new_user_session_path do %>
            <div class="" id="btn-login"> Login</div>
          <% end %>
          <%= link_to new_user_registration_path do %>
            <div class="" id="btn-signup"> Sign up</div>
          <% end %>
        </div>

      <%end %>

    </div><!--/.nav-collapse -->


  </div>

</nav>


